<!-- This is our page for the edit theory form -->

<div class="jumbotron text-center">
	<h1>Editing <%= theory.title %></h1>
</div>

<div class="row">
	<div class="col-sm-6 col-sm-offset 3"></div>

		<% if (errors.length > 0) { %>
			<div class="alert alert-danger">
				<% for (error of errors) { %> 
					<%= error %><br>
				<% } %>
			</div>
			<% } %>

	<form action="/theories/<%= theory.id %>" method="POST">

		<div class="form-group">
			<label>Title</label>
			<input type="text" name="title" class="form-control" value="<%= theory.title %>">
		</div> 

		<div class="form-group">
			<label>Description</label>
			<textarea name="description" row="5" class="form-control"><%= theory.description %></textarea>
		</div>

		<div class="form-group">
			<button type="submit" class="btn btn-success btn=lg">Update</button>
		</div>

	</form>


	</div>
</div>